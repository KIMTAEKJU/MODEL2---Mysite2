<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>mysite2</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!--  Context Parameter(애플리케이션 전역 파라미터)  정의 --> <!-- 서블릿 컨텍스트라는 객체만있으면 서블릿불러서 써도됨?? -->
  <context-param>
  	<param-name>
  		contextConfigLocation  <!-- // 어플리케이션 설정 위치 -->	
  	</param-name>
  	
  	<param-value>
  		/WEB-INF/applicationContext.xml
  	</param-value>
  </context-param>  

  
  <!-- 리스너 정의 (정의만하면됨 이벤트가 일어나기때문에 따로 매핑X)-->
  <listener>
  	<listener-class> <!-- 이벤트를 기다림 -->
  		com.douzone.mysite.listener.ContextLoaderListener
  	</listener-class>
  </listener> 
  
  
  <!-- 필터 정의 -->
  <filter>
  	<filter-name>
  		EncodingFilter	
  	</filter-name>
  	
  	<filter-class>
  		com.douzone.mvc.filter.EncodingFilter
  	</filter-class>
  	
  	<init-param>
  		<param-name>
  			encoding
  		</param-name>
  		
  		<param-value>		<!-- 설정으로 바꿔주는게좋다 프로그램 코드보다 -->
  			utf-8
  		</param-value>
  	</init-param>
  </filter>
  
  
  <!-- 서블릿 정의 -->
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>com.douzone.mysite.controller.MainServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/config.xml</param-value>
    </init-param>
  </servlet>
  
  
  <!-- 필터 - 요청URL 매핑 -->
  <filter-mapping>
  	<filter-name>
  		EncodingFilter
  	</filter-name>
  	
  	<url-pattern>
  		/*
  	</url-pattern>
  </filter-mapping>
  
  <!-- 서블릿 - 요청URL 사이를 매핑 -->
  <servlet-mapping>
    <servlet-name>
    	MainServlet
    </servlet-name>
    
    <url-pattern>
    
    </url-pattern>
  </servlet-mapping>
  
  
</web-app>